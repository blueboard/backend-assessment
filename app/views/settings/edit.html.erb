<%= form_for current_account, url: setting_path do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>

    <%= f.label :email %><br>
    <%= f.text_field :email %><br>

    <%= f.label :password %><br>
    <%= f.text_field :password, placeholder: 'Leave blank if you do not want to change the password' %><br>

    <%= f.submit %>
<% end %>
